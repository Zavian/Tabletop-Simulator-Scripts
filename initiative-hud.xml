<VerticalScrollView visibility="black" color="#ffffff10" scrollbarBackgroundColor="#00000055" offsetXY="7 0" active="true" raycasttarget="true" id="widget" width="400" height="255" rectAlignment="LowerRight" movementType="Clamped" scrollSensitivity="15">
