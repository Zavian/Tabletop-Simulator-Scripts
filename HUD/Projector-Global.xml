<Defaults>
    <!-- #region projector -->
    <Panel class="projector-panel"
        childForceExpandHeight = "false" 
        childForceExpandWidth  = "false" 
        height = "500" 
        raycastTarget = "true"
        rectAlignment = "MiddleCenter"
        width = "500"
        color = "#28282850"
        allowDragging = "true"
        returnToOriginalPositionWhenReleased = "false" />
    <Button class="projector-button-close" colors = "#f0f0f0|#c8329bFF|#ff9b38FF|#00000000"
		color = "rgba(0.94, 0.94, 0.94, 1)"
		height = "64"
		image = "projector_close"
        onClick = "toggleProjectorGUI"
		offsetXY = "0 0"
		rectAlignment = "UpperRight"
		tooltip = "Close the image"
        width = "72"
        textColor = "#f0f0f0" />
    <VerticalLayout class="projector-layout"
        childAlignment = "MiddleCenter"
        childForceExpandHeight = "false"
        childForceExpandWidth = "false"
        height = "100%"
        rectAlignment = "MiddleCenter"
        width = "100%"
        spacing = "10" />

    <Text class="projector-img-title" 
        color = "#ffffff"
        fontSize = "48"
        fontStyle = "Bold"
        horizontalOverflow = "Wrap"
        id = "projector_img_title"
        outline = "#000000"
        resizeTextForBestFit = "true"
        shadow = "rgba(0.10, 0.10, 0.10, 1.0)"
	    text = "Projector" />
    <Image class="projector-img" 
        active = "true"
        flexibleHeight = "false"
        flexibleWidth = "false"
        id = "projector_img"
        image = "projector_cbh"
        preserveAspect = "true"
        raycastTarget  = "false" />
    <Text class="projector-img-desc" 
        alignment = "LowerCenter"
	    color = "#ffffff"
	    fontSize = "22"
	    horizontalOverflow = "Wrap"
	    id = "projector_img_desc"
	    outline = "#000000"
	    shadow = "rgba(0.10, 0.10, 0.10, 1.0)"
	    rectAlignment = "LowerCenter"
	    resizeTextForBestFit = "false"
	    text = "Drop an image tile, token, or a notecard onto the projector to load the image and associated text.\n\n Use the power button to toggle the image for all players." />
    <!-- #endregion projector -->
</Defaults>

